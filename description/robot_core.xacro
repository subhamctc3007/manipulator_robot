<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="my_arm">
    <xacro:include filename="inertial.xacro" />
    <xacro:include filename="materials.xacro" />

    <!-- base -->
    <link name="base_link">
    </link>

    <joint name="base_link_to_base_joint" type="fixed">
        <parent link="base_link"/>
        <child link="base"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>

    <!-- base -->
    <link name="base">
        <visual>
            <origin xyz="0 0 0.02" rpy="0 0 0" />
            <geometry>
                <box size="0.25 0.25 0.04" />
            </geometry>
            <material name="black" />
        </visual>
        <collision>
            <origin xyz="0 0 0.02" rpy="0 0 0" />
            <geometry>
                <box size="0.25 0.25 0.04" />
            </geometry>
        </collision>
        <xacro:box_inertial m="100.0" x="0.25" y="0.25" z="0.04" />
    </link>

    <!-- joint1 -->
    <joint name="joint1" type="revolute">
        <parent link="base"/>
        <child link="link1"/>
        <origin xyz="0 0 0.04" rpy="0 0 0"/>
        <axis xyz="0.0 0.0 1.0"/>
        <limit lower="-3.14" upper="3.14" effort="10.0" velocity="1.0"/>
        <dynamics damping="0.5" friction="0.5"/>
    </joint>

    <!-- link1 -->
    <link name="link1">
        <visual>
            <origin xyz="0 0 0.05" rpy="0 0 0" />
            <geometry>
                <cylinder length="0.1" radius="0.04" />
            </geometry>
            <material name="blue" />
        </visual>
        <collision>
            <origin xyz="0 0 0.05" rpy="0 0 0" />
            <geometry>
                <cylinder length="0.1" radius="0.04" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder m="2.0" l="0.1" r="0.04"/>
    </link>

    <!-- joint2 -->
    <joint name="joint2" type="revolute">
        <parent link="link1"/>
        <child link="link2"/>
        <origin xyz="0 0 0.1" rpy="${pi/2} 0 0"/>
        <axis xyz="0.0 0.0 1.0"/>
        <limit lower="0" upper="3.14" effort="10.0" velocity="1.0"/>
        <dynamics damping="0.5" friction="0.5"/>
    </joint>

    <!-- link2 -->
    <link name="link2">
        <visual>
            <origin xyz="0.22 0 0" rpy="0 ${pi/2} 0" />
            <geometry>
                <cylinder length="0.44" radius="0.04" />
            </geometry>
            <material name="grey" />
        </visual>
        <collision>
            <origin xyz="0.22 0 0" rpy="0 ${pi/2} 0" />
            <geometry>
                <cylinder length="0.44" radius="0.04" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder m="1.5" l="0.44" r="0.04" />
    </link>

    <!-- joint3 -->
    <joint name="joint3" type="revolute">
        <parent link="link2"/>
        <child link="link3"/>
        <origin xyz="0.44 0 0" rpy="${pi} 0 0"/>
        <axis xyz="0.0 0.0 1.0"/>
        <limit lower="-3.14" upper="3.14" effort="10.0" velocity="1.0"/>
        <dynamics damping="0.5" friction="0.5"/>
    </joint>

    <!-- link3 -->
    <link name="link3">
        <visual>
            <origin xyz="0.2 0 0" rpy="0 ${pi/2} 0" />
            <geometry>
                <cylinder length="0.4" radius="0.04" />
            </geometry>
            <material name="blue" />
        </visual>
        <collision>
            <origin xyz="0.2 0 0" rpy="0 ${pi/2} 0" />
            <geometry>
                <cylinder length="0.4" radius="0.04" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder m="1.0" l="0.4" r="0.04" />
    </link>

    <!-- joint4 -->
    <joint name="joint4" type="revolute">
        <parent link="link3"/>
        <child link="link4"/>
        <origin xyz="0.4 0 0" rpy="0 0 0"/>
        <axis xyz="0.0 0.0 1.0"/>
        <limit lower="-3.14" upper="3.14" effort="10.0" velocity="1.0"/>
        <dynamics damping="0.5" friction="0.5"/>
    </joint>

    <!-- link4 -->
    <link name="link4">
        <visual>
            <origin xyz="0.075 0 0" rpy="0 ${pi/2} 0" />
            <geometry>
                <cylinder length="0.15" radius="0.04" />
            </geometry>
            <material name="grey" />
        </visual>
        <collision>
            <origin xyz="0.2 0 0" rpy="0 ${pi/2} 0" />
            <geometry>
                <cylinder length="0.4" radius="0.04" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder m="1.0" l="0.4" r="0.04" />
    </link>

    <!-- joint5 -->
    <joint name="joint5" type="revolute">
        <parent link="link4"/>
        <child link="link5"/>
        <origin xyz="0.15 0 0" rpy="0 0 0"/>
        <axis xyz="1 0 0"/>
        <limit lower="-3.14" upper="3.14" effort="10.0" velocity="1.0"/>
        <dynamics damping="0.5" friction="0.5"/>
    </joint>

    <!-- link5 -->
    <link name="link5">
        <visual>
            <origin xyz="0.0 0 0" rpy="${pi/2} 0 0" />
            <geometry>
                <cylinder length="0.15" radius="0.04" />
            </geometry>
            <material name="blue" />
        </visual>
        <collision>
            <origin xyz="0.2 0 0" rpy="0 ${pi/2} 0" />
            <geometry>
                <cylinder length="0.4" radius="0.04" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder m="1.0" l="0.4" r="0.04" />
    </link>

    <joint name="joint6" type="revolute">
        <parent link="link5"/>
        <child link="link6"/>
        <origin xyz="0 0.08 0" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
        <limit lower="-3.14" upper="3.14" effort="10.0" velocity="1.0"/>
        <dynamics damping="0.5" friction="0.5"/>
    </joint>

    <!-- link6 -->
    <link name="link6">
        <visual>
            <origin xyz="0.0 0 0" rpy="${pi/2} 0 0" />
            <geometry>
                <cylinder length="0.01" radius="0.04" />
            </geometry>
            <material name="white" />
        </visual>
        <collision>
            <origin xyz="0.2 0 0" rpy="0 ${pi/2} 0" />
            <geometry>
                <cylinder length="0.1" radius="0.04" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder m="1.0" l="0.4" r="0.04" />
    </link>

    <joint name="end_joint" type="fixed">
        <parent link="link6"/>
        <child link="end_effector"/>
        <origin xyz="0 0.01 0" rpy="0 0 0"/>
    </joint>

    <!-- end effector -->
    <link name="end_effector">
        <visual>
            <origin xyz="0 0.02 0" rpy="${pi/2} 0 0" />
            <geometry>
                <cylinder length="0.05" radius="0.005" />
            </geometry>
            <material name="black" />
        </visual>
        <collision>
            <origin xyz="0.2 0 0" rpy="0 ${pi/2} 0" />
            <geometry>
                <cylinder length="0.1" radius="0.04" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder m="1.0" l="0.4" r="0.04" />
    </link>

    <!-- Gazebo material settings -->
    <gazebo reference="base">
        <material>Gazebo/Black</material>
    </gazebo>

    <gazebo reference="link1">
        <material>Gazebo/Blue</material>
    </gazebo>

    <gazebo reference="link2">
        <material>Gazebo/Grey</material>
    </gazebo>

    <gazebo reference="link3">
        <material>Gazebo/Blue</material>
    </gazebo>

    <gazebo reference="link4">
        <material>Gazebo/Grey</material>
    </gazebo>

    <gazebo reference="link5">
        <material>Gazebo/Blue</material>
    </gazebo>

    <gazebo reference="link6">
        <material>Gazebo/Grey</material>
    </gazebo>
    
    <gazebo reference="end_effector">
        <material>Gazebo/Black</material>
    </gazebo>

</robot>